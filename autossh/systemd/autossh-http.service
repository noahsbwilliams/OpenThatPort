[Unit]
# â¬‡ï¸ Change this name to describe the function of the port you're opening
Description=autossh-http
# â¬‡ï¸ Tells systemd to start the service after establishing a network connection
After=network.target

[Service]
Type=simple
# â¬‡ï¸ Change to the username of your unprivileged service user
User=username
WorkingDirectory=/home/username
# â¬‡ï¸ Instructs systemd to start the autossh daemon and forward TCP traffic
# on port 80 of the proxy server on port 80 on the localhost
ExecStart=/usr/bin/autossh -R 80:127.0.0.1:80 -N root@host.com
Restart=on-failure

# Makes the daemon a systemwide daemon
[Install]
WantedBy=multi-user.target

